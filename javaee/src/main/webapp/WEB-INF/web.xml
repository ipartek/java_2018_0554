<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<filter-name>SeguridadFilter</filter-name>
  	<display-name>SeguridadFilter</display-name>
  	<description></description>
  	<filter-class>com.ipartek.formacion.filter.SeguridadFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>SeguridadFilter</filter-name>
  	<url-pattern>/SeguridadFilter</url-pattern>
  </filter-mapping>

  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.ejemplocapas.controladores.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Calculator</servlet-name>
  	<display-name>Calculator</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.calcular.Calculator</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CalculadoraController</servlet-name>
  	<display-name>CalculadoraController</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.ejemplocapas.controladores.CalculadoraController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>GestorVideos</servlet-name>
  	<display-name>GestorVideos</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.ejemplocapas.controladores.GestorVideos</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>GestorRetro</servlet-name>
